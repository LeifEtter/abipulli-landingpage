---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import AbipulliHat from "../assets/abipulli-hat.svg";
import EmblaCarousel from "../components/Carousel";

const items = [
  { id: 1, content: "Item 1" },
  { id: 2, content: "Item 2" },
  { id: 3, content: "Item 3" },
  { id: 4, content: "Item 3" },
  { id: 5, content: "Item 3" },
  { id: 6, content: "Item 3" },
];
---

<Layout>
  <header class="flex flex-row">
    <div class="flex flex-row items-center gap-2">
      <Image loading={"eager"} src={AbipulliHat} alt="ddd" />
      <p class="text-2xl font-medium">AbiPulli.com</p>
    </div>
    <div class="flex flex-row items-center gap-2">
      <a class="bg-black p-2 text-white rounded-md">Kollektion</a>
      <a class="rounded-md">Preise</a>
      <a class="rounded-md">KI</a>
    </div>
  </header>
  <section id="title-section">
    <h1 class="text-8xl font-medium text-center">
      Das Original für<br />AbiPullis
    </h1>
    <p class="text-center font-medium text-xl">
      Die modernsten und nachhaltigsten AbiPullis
    </p>
    <a class="shadow bg-abipulli-green">Jetzt Design Starten</a>
    <EmblaCarousel slides={items} client:load />
    <div
      class="absolute w-full overflow-hidden h-full flex flex-row justify-center top-0"
    >
      <div
        class="absolute bg-abipulli-green-light w-900 h-900 rounded-full text-center -top-700 -z-10"
      >
      </div>
    </div>
  </section>
  <section class="flex flex-col items-center mt-50">
    <h1 class="text-5xl font-semibold">Der Ablauf</h1>
    <div class="flex flex-row gap-6 mt-10">
      {
        [
          { title: "Erzähl uns über dich und eine Stufe" },
          { title: "Erstelle Dein eigenes einzigartiges Design" },
          { title: "Lass Deine Stufe Abstimmen" },
          { title: "Erhalte deine einzigartigen Pullover" },
        ].map((e) => (
          <div class="w-50">
            <div class="w-50 h-50 bg-abipulli-beige rounded-3xl" />
            <p class="text-center mt-2 font-medium">{e.title}</p>
          </div>
        ))
      }
    </div>
  </section>
  <section class="flex flex-col items-center bg-abipulli-green-light pt-6">
    <h1 class="text-5xl font-semibold">Smarte Features</h1>
  </section>
</Layout>
