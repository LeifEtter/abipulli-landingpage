---
import { Image } from "astro:assets";

interface Props {
  icon: ImageMetadata;
  title: string;
  description: string;
}
const { icon, title, description } = Astro.props;
---

<div class="bg-white rounded-2xl p-3 flex flex-row gap-2">
  <Image src={icon} alt="yellow-people-icon" />
  <div class="flex flex-col">
    <h3 class="text-md font-semibold">{title}</h3>
    <p>{description}</p>
  </div>
</div>
